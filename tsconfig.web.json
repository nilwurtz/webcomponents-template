{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "es5",
    "module": "ESNext",
    "strict": true,
    "typeRoots": [
      "node_modules/@types",
      "src/types"
    ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}